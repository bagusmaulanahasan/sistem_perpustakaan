<div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold text-gray-800">Daftar Kategori</h2>
        <a href="/admin/categories/new" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
            + Tambah Kategori
        </a>
    </div>
    <table class="min-w-full bg-white">
        <thead class="bg-gray-200">
            <tr>
                <th class="py-2 px-4 text-left">Nama Kategori</th>
                <th class="py-2 px-4 text-left">Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr class="border-b">
                    <td class="py-2 px-4"><%= category.name %></td>
                    <td class="py-2 px-4 flex items-center space-x-2">
                        <a href="/admin/categories/edit/<%= category.id %>" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                        <form action="/admin/categories/delete/<%= category.id %>" method="POST" onsubmit="return confirm('Apakah Anda yakin ingin menghapus kategori ini?');">
                            <button type="submit" class="text-red-600 hover:text-red-900">Hapus</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>