<div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold text-gray-800">Daftar Buku</h2>
        <a href="/admin/books/new" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
            + Tambah Buku
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-200">
                <tr>
                    <th class="py-2 px-4 text-left">Judul</th>
                    <th class="py-2 px-4 text-left">Penulis</th>
                    <th class="py-2 px-4 text-left">Kategori</th>
                    <th class="py-2 px-4 text-center">Stok</th>
                    <th class="py-2 px-4 text-left">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <tr class="border-b">
                        <td class="py-2 px-4 font-medium"><%= book.title %></td>
                        <td class="py-2 px-4 text-gray-600"><%= book.author %></td>
                        <td class="py-2 px-4"><span class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded"><%= book.category_name || 'Tanpa Kategori' %></span></td>
                        <td class="py-2 px-4 text-center"><%= book.stock %></td>
                        <td class="py-2 px-4 flex items-center space-x-2">
                            <a href="/admin/books/edit/<%= book.id %>" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                            <form action="/admin/books/delete/<%= book.id %>" method="POST" onsubmit="return confirm('Apakah Anda yakin ingin menghapus buku ini?');">
                                <button type="submit" class="text-red-600 hover:text-red-900">Hapus</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>